@model VehicleTrackingApp.Models.UserVehicleDetailss

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>

<div>
    <h4>Are you sure you want to delete this vehicle?</h4>
    <dl class="row">
        <dt class="col-sm-2">Vehicle Number</dt>
        <dd class="col-sm-10">@Model.VehicleNumber</dd>
        <dt class="col-sm-2">Vehicle Type</dt>
        <dd class="col-sm-10">@Model.VehicleType</dd>
        <dt class="col-sm-2">Make</dt>
        <dd class="col-sm-10">@Model.Make</dd>
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.ModelNumber</dd>
    </dl>

    <form asp-controller="UserVehicleDetails" asp-action="Delete" method="post">
        <input type="hidden" asp-for="VehicleNumber" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
